<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- style untuk teks edit text1 -->
    <style name="EditText1Style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/abumuda</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- style untuk teks view 1-->
    <style name="TextView1Style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/material_dynamic_secondary60</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- style untuk radio button-->
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
    </style>


    <!-- style untuk teks view 2-->
    <style name="TextView2Style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/material_dynamic_primary10</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>


    <!-- style untuk button -->
    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/ungu</item>
        <item name="android:textColor">@color/material_dynamic_primary100</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="elevation">50dp</item>

    </style>

    <!-- style untuk image view -->
    <style name="ImageViewStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>

    </style>



</resources>
